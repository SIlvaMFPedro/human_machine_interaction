<Window x:Class="ChatBubbles.AddFriendsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatBubbles"
        mc:Ignorable="d"
        Title="AddFriendsWindow" Height="200" Width="300">
    <Grid>
        <Label Content="Enter a username to add friend" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,6,0,0"/>
        <TextBox x:Name="txtFriendName" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="242" Margin="14,37,0,0"/>
        <Button Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="181,114,0,0" Click="AddFriendToList"/>
        <Button Content="Import friends" HorizontalAlignment="Left" VerticalAlignment="Top" Width="111" Margin="14,114,0,0" Click="ImportFriends"/>

    </Grid>
</Window>
